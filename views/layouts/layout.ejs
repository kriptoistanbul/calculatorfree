<!DOCTYPE html>
<html lang="<%= locale %>">
<head>
  <meta charset="UTF-8">
  <title><%= title %> | Online Free Calculator</title>
  <meta name="description" content="<%= description %>">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <!-- SEO Meta Tags -->
  <meta name="keywords" content="<%= __('free calculators, online calculators, finance calculators, health calculators, astrology calculators, educational calculators') %>">
  <meta name="author" content="Online Free Calculator">
  
  <!-- Open Graph Meta Tags -->
  <meta property="og:title" content="<%= title %>">
  <meta property="og:description" content="<%= description %>">
  <meta property="og:type" content="website">
  <meta property="og:url" content="<%= currentUrl %>">
  <meta property="og:image" content="https://calculator-free.online/assets/images/og-image.jpg">
  
  <!-- hreflang Tags -->
  <% ['en', 'fr', 'es', 'de', 'zh', 'ru', 'ja', 'ar', 'pt', 'hi'].forEach(function(localeCode) { %>
    <link rel="alternate" hreflang="<%= localeCode %>" href="https://calculator-free.online<%= localeCode === 'en' ? '' : '/' + localeCode %><%= originalUrl.replace(/^\/(en|fr|es|de|zh|ru|ja|ar|pt|hi)/, '') %>">
  <% }); %>

  <!-- JSON-LD Structured Data for SEO -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "WebSite",
    "name": "Online Free Calculator",
    "url": "https://calculator-free.online",
    "potentialAction": {
      "@type": "SearchAction",
      "target": "https://calculator-free.online/search?query={search_term_string}",
      "query-input": "required name=search_term_string"
    }
  }
  </script>
  
  <link rel="stylesheet" href="/assets/css/styles.css">
</head>
<body>
  <header>
    <div class="container">
      <div class="header-top">
        <h1><a href="<%= langPrefix %>/"><%= __('Online Free Calculator') %></a></h1>
        <button class="menu-toggle" onclick="toggleMenu()">
          <span class="bar"></span>
          <span class="bar"></span>
          <span class="bar"></span>
        </button>
      </div>
      <nav>
        <ul class="menu" id="menu">
          <li><a href="<%= langPrefix %>/"><%= __('Home') %></a></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle"><%= __('Categories') %> â–¼</a>
            <ul class="submenu">
              <!-- Category links -->
              <li><a href="<%= langPrefix %>/categories/date-time"><%= __('Date and Time') %></a></li>
              <li><a href="<%= langPrefix %>/categories/financial"><%= __('Financial') %></a></li>
              <li><a href="<%= langPrefix %>/categories/health-fitness"><%= __('Health and Fitness') %></a></li>
              <li><a href="<%= langPrefix %>/categories/educational"><%= __('Educational') %></a></li>
              <li><a href="<%= langPrefix %>/categories/astrology-zodiac"><%= __('Astrology and Zodiac') %></a></li>
              <li><a href="<%= langPrefix %>/categories/environmental-impact"><%= __('Environmental Impact') %></a></li>
              <li><a href="<%= langPrefix %>/categories/business-marketing"><%= __('Business and Marketing') %></a></li>
              <!-- Add other categories here -->
            </ul>
          </li>
          <li><a href="<%= langPrefix %>/blog"><%= __('Blog') %></a></li>
          <li><a href="<%= langPrefix %>/about"><%= __('About Us') %></a></li>
          <li><a href="<%= langPrefix %>/privacy-policy"><%= __('Privacy Policy') %></a></li>
        </ul>
      </nav>
    </div>
  </header>

  <main class="container">
    <%- body %>
  </main>

  <footer>
    <div class="container">
      <div class="footer-content">
        <div class="footer-links">
          <h4><%= __('Quick Links') %></h4>
          <ul>
            <li><a href="<%= langPrefix %>/about"><%= __('About Us') %></a></li>
            <li><a href="<%= langPrefix %>/privacy-policy"><%= __('Privacy Policy') %></a></li>
            <li><a href="<%= langPrefix %>/blog"><%= __('Blog') %></a></li>
            <!-- Add more links as needed -->
          </ul>
        </div>
        <div class="footer-contact">
          <h4><%= __('Contact Us') %></h4>
          <p>Email: <a href="mailto:info@calculator-free.online">info@calculator-free.online</a></p>
          <p>Phone: +1 (234) 567-890</p>
        </div>
        <div class="footer-social">
          <h4><%= __('Follow Us') %></h4>
          <ul>
            <li><a href="#"><i class="fab fa-facebook-f"></i> Facebook</a></li>
            <li><a href="#"><i class="fab fa-twitter"></i> Twitter</a></li>
            <li><a href="#"><i class="fab fa-instagram"></i> Instagram</a></li>
            <!-- Add more social links as needed -->
          </ul>
        </div>
      </div>
      <p class="footer-bottom">&copy; <%= new Date().getFullYear() %> Online Free Calculator. All rights reserved.</p>
      <div class="language-selector">
        <label for="language-select"><%= __('Language') %>:</label>
        <select id="language-select" onchange="changeLanguage(this.value)">
          <% ['en', 'fr', 'es', 'de', 'zh', 'ru', 'ja', 'ar', 'pt', 'hi'].forEach(function(lang) { %>
            <option value="<%= lang %>" <% if(locale === lang){ %>selected<% } %>><%= lang.toUpperCase() %></option>
          <% }); %>
        </select>
      </div>
    </div>
  </footer>

  <!-- JavaScript -->
  <script>
    function changeLanguage(lang) {
      // Use <%- %> to output unescaped JSON string
      var originalUrl = - JSON.stringify(originalUrl) ;
      var currentUrl = originalUrl.replace(/^\/(en|fr|es|de|zh|ru|ja|ar|pt|hi)/, '');
      var newUrl = lang === 'en' ? currentUrl : '/' + lang + currentUrl;
      window.location.href = newUrl;
    }

    function toggleMenu() {
      var menu = document.getElementById('menu');
      menu.classList.toggle('active');
    }

    // Accordion functionality for mobile submenu
    var dropdownToggles = document.querySelectorAll('.dropdown-toggle');
    dropdownToggles.forEach(function(toggle) {
      toggle.addEventListener('click', function(e) {
        e.preventDefault();
        this.parentElement.querySelector('.submenu').classList.toggle('active');
        this.classList.toggle('active');
      });
    });
  </script>
  
  <!-- Font Awesome for Social Icons (Optional) -->
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</body>
</html>