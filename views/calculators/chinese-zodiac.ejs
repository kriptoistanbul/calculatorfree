<!-- views/calculators/chinese-zodiac.ejs -->

<h2><%= __('Chinese Zodiac Calculator') %></h2>
<p><%= __('Find out your Chinese zodiac sign based on your birth year.') %></p>

<form id="chinese-zodiac-form">
  <label for="birthYear"><%= __('Birth Year:') %></label>
  <input type="number" id="birthYear" name="birthYear" min="1900" max="<%= new Date().getFullYear() %>" required>

  <button type="submit"><%= __('Find My Zodiac Sign') %></button>
</form>

<div id="chinese-zodiac-result"></div>

<script src="/assets/js/chineseZodiacCalculator.js"></script>