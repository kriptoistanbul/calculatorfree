<h2><%= __('Tip Calculator') %></h2>
<p><%= __('Calculate the tip amount based on your bill and desired tip percentage.') %></p>

<form id="tip-form">
  <label for="billAmount"><%= __('Bill Amount ($):') %></label>
  <input type="number" id="billAmount" name="billAmount" step="0.01" required>

  <label for="tipPercentage"><%= __('Tip Percentage (%):') %></label>
  <input type="number" id="tipPercentage" name="tipPercentage" step="0.1" required>

  <button type="submit"><%= __('Calculate') %></button>
</form>

<p id="tip-result"></p>

<script src="/assets/js/tipCalculator.js"></script>