<!-- views/calculators/grade-gpa.ejs -->

<h2><%= __('Grade and GPA Calculator') %></h2>
<p><%= __('Calculate your GPA based on your course grades and credit hours.') %></p>

<form id="grade-gpa-form">
  <div id="courses-container">
    <div class="course">
      <label><%= __('Course Name:') %></label>
      <input type="text" name="courseName" required>

      <label><%= __('Grade (A-F):') %></label>
      <select name="grade" required>
        <option value="4.0">A</option>
        <option value="3.0">B</option>
        <option value="2.0">C</option>
        <option value="1.0">D</option>
        <option value="0.0">F</option>
      </select>

      <label><%= __('Credit Hours:') %></label>
      <input type="number" name="creditHours" min="1" required>
    </div>
  </div>

  <button type="button" onclick="addCourse()"><%= __('Add Another Course') %></button>
  <button type="submit"><%= __('Calculate GPA') %></button>
</form>

<div id="grade-gpa-result"></div>

<script src="/assets/js/gradeGpaCalculator.js"></script>