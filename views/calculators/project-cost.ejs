<h2><%= __('Project Cost Estimator') %></h2>
<p><%= __('Budget and plan financials for project management.') %></p>

<form id="project-cost-form">
  <label for="items"><%= __('Number of Items:') %></label>
  <input type="number" id="items" name="items" step="1" required>

  <label for="cost-per-item"><%= __('Cost per Item ($):') %></label>
  <input type="number" id="cost-per-item" name="costPerItem" step="0.01" required>

  <label for="additional-costs"><%= __('Additional Costs ($):') %></label>
  <input type="number" id="additional-costs" name="additionalCosts" step="0.01" required>

  <button type="submit"><%= __('Calculate') %></button>
</form>

<p id="result"></p>

<script src="/assets/js/projectCostCalculator.js"></script>