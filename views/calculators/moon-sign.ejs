<!-- views/calculators/moon-sign.ejs -->

<h2><%= __('Moon Sign Calculator') %></h2>
<p><%= __('Find out your Moon sign based on your birth date and time.') %></p>

<form id="moon-sign-form">
  <label for="birthDate"><%= __('Birth Date (MM/DD/YYYY):') %></label>
  <input type="date" id="birthDate" name="birthDate" required>

  <label for="birthTime"><%= __('Birth Time (HH:MM):') %></label>
  <input type="time" id="birthTime" name="birthTime" required>

  <button type="submit"><%= __('Find My Moon Sign') %></button>
</form>

<div id="moon-sign-result"></div>

<script src="/assets/js/moonSignCalculator.js"></script>