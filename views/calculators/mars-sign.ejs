<!-- views/calculators/mars-sign.ejs -->

<h2><%= __('Mars Sign Calculator') %></h2>
<p><%= __('Find out your Mars sign based on your birth date and time.') %></p>

<form id="mars-sign-form">
  <label for="birthDate"><%= __('Birth Date (MM/DD/YYYY):') %></label>
  <input type="date" id="birthDate" name="birthDate" required>

  <label for="birthTime"><%= __('Birth Time (HH:MM):') %></label>
  <input type="time" id="birthTime" name="birthTime" required>

  <button type="submit"><%= __('Find My Mars Sign') %></button>
</form>

<div id="mars-sign-result"></div>

<script src="/assets/js/marsSignCalculator.js"></script>