<!-- views/calculators/vedic-astrology.ejs -->

<h2><%= __('Vedic Astrology Calculator') %></h2>
<p><%= __('Generate your Vedic astrology chart based on your birth details.') %></p>

<form id="vedic-astrology-form">
  <label for="birthDate"><%= __('Birth Date (MM/DD/YYYY):') %></label>
  <input type="date" id="birthDate" name="birthDate" required>

  <label for="birthTime"><%= __('Birth Time (HH:MM):') %></label>
  <input type="time" id="birthTime" name="birthTime" required>

  <label for="birthPlace"><%= __('Birth Place:') %></label>
  <input type="text" id="birthPlace" name="birthPlace" required>

  <button type="submit"><%= __('Generate Vedic Chart') %></button>
</form>

<div id="vedic-astrology-result"></div>

<script src="/assets/js/vedicAstrologyCalculator.js"></script>