<h2><%= __('Age in Days Calculator') %></h2>
<p><%= __('Enter your birthdate to calculate your age in total days.') %></p>

<form id="age-days-form">
  <label for="birthdate"><%= __('Birthdate:') %></label>
  <input type="date" id="birthdate" name="birthdate" required>

  <button type="submit"><%= __('Calculate') %></button>
</form>

<p id="age-days-result"></p>

<script src="/assets/js/ageInDaysCalculator.js"></script>