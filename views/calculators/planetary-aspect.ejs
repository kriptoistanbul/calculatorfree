<!-- views/calculators/planetary-aspect.ejs -->

<h2><%= __('Planetary Aspect Calculator') %></h2>
<p><%= __('Calculate the aspects between different planets based on your birth details.') %></p>

<form id="planetary-aspect-form">
  <label for="birthDate"><%= __('Birth Date (MM/DD/YYYY):') %></label>
  <input type="date" id="birthDate" name="birthDate" required>

  <label for="birthTime"><%= __('Birth Time (HH:MM):') %></label>
  <input type="time" id="birthTime" name="birthTime" required>

  <label for="birthPlace"><%= __('Birth Place:') %></label>
  <input type="text" id="birthPlace" name="birthPlace" required>

  <button type="submit"><%= __('Calculate Aspects') %></button>
</form>

<div id="planetary-aspect-result"></div>

<script src="/assets/js/planetaryAspectCalculator.js"></script>