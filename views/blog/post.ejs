<%
  title = post.title;
  description = post.excerpt || '';
  var langPrefix = locale === 'en' ? '' : '/' + locale;
%>

<section class="blog-post">
  <h1><%= post.title %></h1>
  <div class="post-meta"><%= __('Posted on') %> <%= post.date %> | <a href="<%= langPrefix %>/categories/<%= post.categorySlug %>"><%= post.category %></a></div>
  <div class="post-content">
    <%- post.content %>
  </div>
</section>

<!-- JSON-LD Structured Data for BlogPost -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": "<%= post.title %>",
  "description": "<%= post.excerpt %>",
  "datePublished": "<%= post.date %>",
  "author": {
    "@type": "Person",
    "name": "Your Name" // Replace with actual author name
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "<%= currentUrl %>"
  }
}
</script>